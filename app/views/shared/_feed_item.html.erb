<li id="<%= feed_item.id %>">
 <div class="widget-3 widget-last widget widget_polygon_widget" id="polygon_widget-2">
  <ul id="recentcomments">
    <li class="recentcomments"><%= link_to feed_item.user.username, feed_item.user %>
      <br><%= link_to feed_item.content , post_path(feed_item.id) %>
      <% if current_user?(feed_item.user) %>
      <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.content %> <% end %>
      <div class="palignleft"></div>
      <b> Posted <%= time_ago_in_words(feed_item.created_at) %> ago.</b> </br></br>
    </li>
  </ul>
</div>