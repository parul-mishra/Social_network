<div class="container">

    <div class="fb-profile">
        <img align="left"><%= image_tag @user.avatar.url(:medium) %></img>
        <div class="fb-profile-text">
           <h4><%= @user.username %></h4>
            <p> <section class="stats">
               <%= render 'shared/stats' %>
           </section></p>
            <p>
                <%= render 'follow_form' if signed_in? %></p>
                <% if current_user == @user %>
                  <%= link_to('Edit Info', edit_user_registration_path) %><p>
                  <%end%>
        </div>
    </div>
</div> <!-- /container -->  

